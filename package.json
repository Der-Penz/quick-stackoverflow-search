{
	"name": "quick-stackoverflow-search",
	"displayName": "Editor Stackoverflow Search",
	"description": "Search a Stackoverflow question by its title in the editor",
  "publisher": "DerPenz",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:quick-stackoverflow-search.soso-input",
		"onCommand:quick-stackoverflow-search.soso-clipboard",
		"onCommand:quick-stackoverflow-search.soso-selection"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "quick-stackoverflow-search.soso-input",
				"title": "Search on Stack Overflow",
				"category": "SoSo"
			},
      {
				"command": "quick-stackoverflow-search.soso-clipboard",
				"title": "Search clipboard on Stack Overflow",
				"category": "SoSo"
			},
      {
				"command": "quick-stackoverflow-search.soso-selection",
				"title": "Search selection on Stack Overflow",
				"category": "SoSo"
			}
		],
		"keybindings": [
			{
				"command": "quick-stackoverflow-search.soso-input",
				"key": "ctrl+alt+h",
				"mac": "cmd+alt+h"
			},
			{
				"command": "quick-stackoverflow-search.soso-input",
				"key": "ctrl+alt+s",
				"mac": "cmd+alt+s"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "quick-stackoverflow-search.soso-selection",
					"group": "z_commands",
					"when": "editorHasSelection"
				},
        {
					"command": "quick-stackoverflow-search.soso-clipboard",
					"group": "z_commands",
					"when": "editorFocus"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"axios": "^0.26.1"
	}
}
